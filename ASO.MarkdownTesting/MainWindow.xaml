<Window x:Class="ASO.MarkdownTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASO.MarkdownTesting"
        xmlns:aso="clr-namespace:ASO.Markdown;assembly=ASO.Markdown"
        xmlns:controls="clr-namespace:ASO.Markdown.Controls;assembly=ASO.Markdown"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">

        <Grid.ColumnDefinitions>
            
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <controls:AsoMarkdownDocumentEditor Name="Editor"/>
        <controls:AsoAnswerEditor Name="Answers" Grid.Row="1" BorderThickness="1" BorderBrush="Silver" Margin="0 5 0 0" Background="#F8F9FA"/>
        <Button Content="проверка" Grid.Row="2" Height="30" Width="60" Click="Button_Click"/>
    </Grid>
</Window>
